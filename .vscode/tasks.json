{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            
            "label": "Create venv with all exporters",
            "type": "shell",
            "linux": {
                "command": "${workspaceFolder}/tools/prepare_virtual_env.sh ; ${workspaceFolder}/venv/Scripts/activate ; pip install -r requirements.txt",
            },
            "windows": {
                "command": "@()|${workspaceFolder}/tools/prepare_virtual_env.bat ; ${workspaceFolder}/venv/Scripts/Activate.ps1 ; pip install -r requirements.txt",
            }
        },
        {
            "label": "Build UI",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/venv/Scripts/Activate.ps1 ; python ${workspaceFolder}/setup.py build_ui"
            },
            "linux": {
                "command": "${workspaceFolder}/venv/Scripts/activate ; python ${workspaceFolder}/setup.py build_ui"
            }
        },
        {
            "label": "Run all tests on all cores",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/venv/Scripts/Activate.ps1 ; python -m pytest -n auto ${workspaceFolder}/test"
            },
            "linux": {
                "command": "${workspaceFolder}/venv/Scripts/activate ;  python -m pytest -n auto ${workspaceFolder}/test"
            }
        }
    ]
}